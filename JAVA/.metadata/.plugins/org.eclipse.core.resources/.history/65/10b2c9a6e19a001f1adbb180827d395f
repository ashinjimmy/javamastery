package java_basics;

import java.util.Arrays;

public class DataArrays {

	public static void singleDimensionalArray() {
		String[] days = { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
		System.out.println("First method tp print array " + Arrays.toString(days)); // method 1 to print array
		System.out.println("-------------Method 2-----------------------");
		for (int i = 0; i < days.length; i++) {
			System.out.println(days[i]); // method 2 to print the array
		}
		System.out.println("-------------Method 3-----------------------");
		for (String day : days) {
			System.out.println(day); // method 3 to print the array
		}
	}

}
