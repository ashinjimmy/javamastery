package java_basics;

import java.util.Scanner;

public class SwitchExpression {

	static String day = "MONDAY";
	static int numOfLetters = 0;

	public static String dayType(String day) {
		// Switch expression with Java 17
		String dayType = switch (day) {
		case "MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY" -> "Weekday";
		case "SATURDAY", "SUNDAY" -> "Weekend";
		default -> throw new IllegalArgumentException("Invalid day: " + day);
		};
		return dayType;
	}

	public static int numOfLetters(String name) {

		numOfLetters = switch (name) {
		case "Jane", "Shan", "Amit", "Manu" -> 4;
		case "Ashin", "Mebin", "Sebin" -> 5;
		case "Sharun", "Alison", "Balaji" -> 6;
		default -> {
			System.out.println("Unrecognized name -- " + name);
			yield -1;
		}
		};
		return numOfLetters;
	}

}
