package java_basics;

import java.util.Scanner;

public class MainClass {

	
	public static void main(String[] args) {
		
		ForLoop forLoop = new ForLoop();
	
		Scanner input = new Scanner(System.in);
		System.out.println("Enter the Java Type ---- ");
		String javaType = input.next();
		if(javaType == "switchExpression") {
			System.out.println("Enter the name -- ");
			String name =  input.next();
			System.out.println(SwitchExpression.numOfLetters(name));
			System.out.println("Enter the day -- ");
			String day = input.next();
			System.out.println(SwitchExpression.dayType(day));
		} else if(javaType == "loops") {
			System.out.println("Enter the type of loop");
			String loop = input.next();
			if(loop == "for") {
				forLoop.countDiano();
			}
		}
		
		
		
	}

}
